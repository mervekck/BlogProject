@using BlogProject.UI.Areas.AdminArea.Models.VM
@model PostIndexVM

@{
    ViewData["Title"] = "Post List";
}

<h1>Index</h1>


<div id="content">
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Data Tables</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Body</th>
                                    <th>Summary</th>
                                    <th>Picture</th>
                                    <th>AuthorName</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PostIndexItems)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Body</td>
                                        <td>@item.Summary</td>
                                        <td>
                                            @if (item.Picture != null && item.Picture.Length > 0)
                                            {
                                                <img src="data:image;base64,@(Convert.ToBase64String(item.Picture))" alt="Post Image" />
                                            }

                                        </td>
                                        <td>@item.AuthorName</td>
                                        <td>
                                            <a href="/AdminArea/Post/Edit/@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                            <a href="/AdminArea/Post/Remove/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div style="text-align: right; margin-right: 10px;">
                        <a href="/AdminArea/Post/Add" class="btn btn-primary">Create New Post</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>