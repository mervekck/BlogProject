@using BlogProject.UI.Areas.AdminArea.Models.VM
@model AuthorIndexVM
@{
    ViewData["Title"] = "Author List";
}

<h2 class="mb-3">@ViewData["Title"]</h2>


<div id="content">
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Data Tables</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Website</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
                <td>@author.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(author.WebsiteUrl))
                    {
                        <a href="@author.WebsiteUrl" target="_blank">@author.WebsiteUrl</a>
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>@author.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="/AdminArea/Author/Edit/@author.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/AdminArea/Author/Remove/@author.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
                    </div>
                    <div style="text-align: right; margin-right: 10px;">
                        <a href="/AdminArea/Author/Add" class="btn btn-primary">Create New Author</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>