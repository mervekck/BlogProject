@using BlogProject.Domain.Entities.Concrete
@model List<Post>
@{
	ViewData["Title"] = "Home Page";
}

<!-- start: post -->
@foreach (var post in Model)
{
	<div class="post">
		<!-- start: postimage -->
		<div class="post-img">
			<div class="post-date"><b>@post.CreatedDate.ToString("dd")</b>@post.CreatedDate.ToString("MMM")</div>

			<div class="post-info">Posted by <a href="#">@(ViewBag.Authors[post.AuthorId])</a></div>

			<a href="#"> <img src="@(post.Picture != null ? "data:image/*;base64," + Convert.ToBase64String(post.Picture) : "/images/default-post-img.jpg")" alt="@post.Title" /></a>
		</div>
		<!-- start: post excerpt -->
		<div class="excerpt">
			<h2><a href="#">@post.Title</a></h2>
			<p>@post.Summary</p>
			<a href="#" class="read">continue reading...</a>
		</div>
	</div>
}
